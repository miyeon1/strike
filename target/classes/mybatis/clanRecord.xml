<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="clanRecord">
	<select id="list" resultType="ClanRecord">
		SELECT * FROM Clan_Record
	</select>
	
	<insert id="add">
		INSERT INTO Clan_Record (clan_name,tier_code,clan_code,clan_count,clan_win,clan_lost,clan_score)
		VALUES (#{clanName}, #{tierCode}, #{clanCode}, #{clanCount}, #{clanWin}, #{clanLost}, #{clanScore})
	</insert>
	
	<select id="item" resultType="ClanRecord">
		SELECT * FROM Clan_Record
		WHERE clan_name = #{clanName}
	</select>
	
	<update id="update">
		UPDATE Clan_Record 
		SET clan_name = #{clanName},tier_code= #{tierCode},clan_code= #{clanCode},clan_count= #{clanCount},clan_win= #{clanWin},clan_lost= #{clanLost},clan_score= #{clanScore}
		WHERE clan_name = #{clanName}
	</update>
	
	<delete id="delete">
		DELETE FROM Clan_Record 
		WHERE clan_name = #{clanName}
	</delete>
	
